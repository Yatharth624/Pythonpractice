num = int(input("Enter a number between 1 and 10: "))
while num<0 or num>10:
    print("please enter a valid number")
    num = int(input("Enter a number between 1 and 10: "))
print(f"You entered {num}")
principle = 0
time = 0
interest = 0

while principle <= 0:
    principle = float(input("Enter principle ammount: "))
    if principle <= 0:
        print("Principle cannot be 0 or negative")

while interest <= 0:
    interest = float(input("Enter rate of interest: "))
    if interest <= 0:
        print("interest cannot be 0 or negative")

while time <= 0:
    time = int(input("Enter time in years: "))
    if time <= 0:
        print("Time cannot be less than zero")

Ammount = principle * pow((1 + interest / 100), time)
print(f"The total ammount after {time} years is: {Ammount:.2f}")

CI = Ammount - principle
print(f"Compound interest is : {CI:.2f}")
