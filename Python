age = int(input("Enter your age: "))
while age < 0:
    print("Age invalid")
    age = int(input("Please enter your age: "))
print(f"You are {age} years old")
food = input("Enter food you like: (press q to quit)")
while not food == "q":
    print(f"You like {food}")
    food = input("Enter food you like: (press q to quit)")
